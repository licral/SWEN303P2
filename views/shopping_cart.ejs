</script>-->


<!-- Creates the menubar as defined in menubar-src -->
<% include include/menubar.ejs %>


<!-- Page Content -->
<div class="container">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Shopping Cart</h1>
        </div>

        <div class="panel-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Remove</th>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i=0; i<items.length; i++) {%>
                    <tr>
                        <td style="width: 30px;"><a href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: #ff0000; font-size: 20px; position: relative; top: 40%; left: 40%;"></span></a></td>
                        <td style="width: auto;"><a href="/browse/item/<%= items[i]._id %>"><%= items[i].title %></a></td>
                        <td style="width: 30px;"><input type="number" name="quantity" min="1" max="100" style="width: 100%; text-align:right;" value=<%= Number(quantityList[i])%>></td>
                        <td style="width: 50px;">$<%= items[i].price %></td>
                        <td style="width: 50px;">$<%= items[i].price * Number(quantityList[i])%></td>
                    </tr>
                <% } %>
                </tbody>

                <tfoot>
                    <td colspan="4"><p style="text-align:right;">Total</p></td>
                    <td>
                        <% var totalPrice = 0; %>
                        <% for(var i=0; i<items.length; i++) {%>
                            <% totalPrice += items[i].price * Number(quantityList[i]) %>
                        <% } %>
                        <p>$<%= totalPrice%></p>
                    </td>
                </tfoot>
            </table>

            <button class="btn btn-default pull-right">Continue to Checkout</button>
        </div>
    </div>

</div>
</body>
</html>