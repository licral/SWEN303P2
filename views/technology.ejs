<!DOCTYPE html>
<html>
	<head>
		<title><%= title %> - <%= page %></title>
		<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'/>
		<link rel='stylesheet' href='/stylesheets/style.css'/>
		<% include include/fonts.ejs%>
	</head>
	<body>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

	<script>

		//http://demo.solemone.de/overflow-image-with-vertical-centering-for-responsive-web-design/
		$(document).ready(function() {
	 
	    var imageHeight, wrapperHeight, overlap, container = $('.image-wrap');  
	 
	    function centerImage() {
	        imageHeight = container.find('img').height();
	        wrapperHeight = container.height();
	        overlap = (wrapperHeight - imageHeight) / 2;
	        container.find('img').css('margin-top', overlap);
	    }
	     
	    $(window).on("load resize", centerImage);
	 
	});
	</script>

	<%String.prototype.capitalize = function() {
		return this.charAt(0).toUpperCase() + this.slice(1);
	}%>

	<!-- Creates the menubar as defined in menubar-src -->
	<% include include/menubar.ejs %>
	<%function capitalizeFirstLetter(string) {
		return string.charAt(0).toUpperCase() + string.slice(1);
	}%>

    <!--Upload some images via sell then check this out! -->
	<div class="container">

		<% for (var subcategory in subcats) { %>
				<p><%=subcategory%></p>
            <% } %>

		<div class="row">

			<div class="col-lg-12" id = header>
				<h1 class="page-header" style ="font-family: 'Raleway', sans-serif"><%=capitalizeFirstLetter(cat)%></h1>
			</div>

			<!-- Page Content -->
			<ul class="breadcrumb">
				<li><a href="#">Home</a></li>
				<li><a href="#">Private</a></li>
				<li><a href="#">Pictures</a></li>
				<li class="active">Vacation</li>
			</ul>

			<p class = "results">Browsing <%=start+1%>-<%=start+items.length%> of <%=count%> listings</p>

            <% items.forEach(function(item) { %>
            <div class="col-lg-3 col-md-4 col-xs-12 thumb" id = entry>
                <a class="entry" href="/browse/item/<%= item._id %>">
                	<div class="image-wrap">
                   <img src="/browse/image/<%= item._id %>" alt="">
            		   </div>
                </a>
                <p class = item><%= item.title %></p>
                <p class = stock>In Stock: <%= item.stock %></p>
                <p class =price>$<%= item.price %></p>
            </div>
            <% }); %>



		</div>

		<ul class="pagination">
			<% for (var i =0; i < count/20; i++){%>
				<li><a href="./<%=i+1%>"><%=i+1%></a></li>
			<%}%>
		</ul>


    </div>
	</body>
</html>